// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id       String   @id @map("_id") @db.ObjectId
  name     String?
  email String? @unique
  emailVerified DateTime?
  image String?
  hashpasswords String?
  created DateTime? @default(now())
  updated DateTime? @default(now())

  conversationsIds String[] @db.ObjectId
  conversations Conversations[] @relation(fields: [conversationsIds], references: [id])


  seenMessagesIds String[] @db.ObjectId
  seenMessage Message[] @relation("Seen", fields: [seenMessagesIds], references: [id])


  accounts Account[]
  messages Message[]


}

model Account {
    id       String   @id @map("_id") @db.ObjectId
    userId String @db.ObjectId
    type String
    provider String
    providerAccountId String
    refresh_token String? @db.String
    access_token String? @db.String
    expires_in Int?
    token_type String?
    scope String?
    id_token String?
    sesstion_state String?

    user User @relation(fields: [userId], references: [id])

}
